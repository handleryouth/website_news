        <button type="submit" class="btn btn-primary">Find</button>
      </div>

    </div>
  </form>


  <div class="container">
    <% for(var i = 0; i< srcName.length; i++){ %>
    <div class="news-item">
      <h1 class="header-news"><%= srcName[i] %></h1>
      <p class="description-news"><%= srcDescription[i] %></p>
      <p><a class="btn btn-lg btn-primary" href=<%= srcLink[i] %>>Show me !</a></p>
    </div>
  </div>
  <% } %>

