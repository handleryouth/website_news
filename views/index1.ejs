<body>

  <%- include('header'); -%>

  <main>

    <div class="header-title">
      <h1>We Got All News For You !</h1>
      <a href="#anotherNews"><button type="button" class="btn btn-primary" href="#anotherNews">Get Started</button></a>

    </div>

    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <% for(var i = 1; i<5; i++){ %>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to=<%= i %>></button>
        <% } %>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active" style="background:url(<%= imagesList[0] %>); background-repeat: no-repeat; background-size:cover">

          <div class="container">
            <div class="carousel-caption text-start">
              <h1 class="carousel-title-header"><%= headerList[0] %></h1>
              <p class="carousel-title-description"><%= descriptionList[0] %></p>
              <p><a class="btn btn-lg btn-primary" href="#">Show me !</a></p>
            </div>
          </div>
        </div>

        <% for(var i = 1; i<5; i++){ %>
          <div class="carousel-item" style="background:url(<%= imagesList[i] %>); background-repeat: no-repeat; background-size:cover">
            <div class="container">
              <div class="carousel-caption">
                <h1 class="carousel-title-header"><%= headerList[i] %></h1>
                <p class="carousel-title-description"><%= descriptionList[i] %></p>
                <p><a class="btn btn-lg btn-primary" href="#">Show me !</a></p>
              </div>
            </div>
          </div>
        <% } %>

      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>


